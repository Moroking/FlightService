@model IEnumerable<FlightService.Web.Models.FlightViewModel>


@{
    ViewData["Title"] = "Flights";
}

<div class="text-center">
    <h2>Choose a Flight</h2>

    <table class="table">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(model => model.flightNumber)</td>
                <td>@Html.DisplayNameFor(model => model.Airline)</td>
                <td>@Html.DisplayNameFor(model => model.departureTime)</td>
                <td>@Html.DisplayNameFor(model => model.departureDate)</td>
                <td>@Html.DisplayNameFor(model => model.departureAirport)</td>
                <td>@Html.DisplayNameFor(model => model.arrivalTime)</td>
                <td>@Html.DisplayNameFor(model => model.arrivalDate)</td>
                <td>@Html.DisplayNameFor(model => model.arrivalAirport)</td>
                <td>@Html.DisplayNameFor(model => model.passengerLimit)</td>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var flight in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelitem => flight.flightNumber)</td>
                <td>@Html.DisplayFor(modelitem => flight.Airline)</td>
                <td>@Html.DisplayFor(modelitem => flight.departureTime)</td>
                <td>@Html.DisplayFor(modelitem => flight.departureDate)</td>
                <td>@Html.DisplayFor(modelitem => flight.departureAirport)</td>
                <td>@Html.DisplayFor(modelitem => flight.arrivalTime)</td>
                <td>@Html.DisplayFor(modelitem => flight.arrivalDate)</td>
                <td>@Html.DisplayFor(modelitem => flight.arrivalAirport)</td>
                <td>@Html.DisplayFor(modelitem => flight.passengerLimit)</td>
                @if (flight.passengerAmount < flight.passengerLimit)
                {
                    <td>@Html.ActionLink("Book Flight", "BookFlights", new { FlightId = flight.Id, PassengerId = ViewBag.Id })</td>

                }
                else
                {
                    <td>Full</td>

                }

            </tr>
            }
        </tbody>
    </table>
</div>